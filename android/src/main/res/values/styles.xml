<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="android:Theme.Holo.Light">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_600</item>
        <item name="colorAccent">@color/deep_orange_500</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/action_bar_title</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <item name="closeIcon">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="card_list_view" parent="android:Widget.ListView.White">
        <item name="android:background">@color/card_list_view_background</item>
    </style>

    <style name="placeholder_image">
        <item name="android:layout_marginTop">@dimen/placeholder_image_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/placeholder_image_margin_bottom</item>
        <item name="android:layout_height">@dimen/placeholder_image_height</item>
    </style>

    <style name="placeholder_text">
        <item name="android:textSize">@dimen/placeholder_text_text_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/placeholder_text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/placeholder_text_margin_right</item>
        <item name="android:layout_marginTop">@dimen/placeholder_text_margin_top</item>
    </style>

    <style name="about_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/about_title_margin_left</item>
        <item name="android:layout_marginTop">@dimen/about_title_margin_top</item>
    </style>

    <style name="TextAppearance.About.Title" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">@dimen/about_title_text_size</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="about_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/about_description_margin_top</item>
    </style>

    <style name="TextAppearance.About.Description" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">@dimen/about_description_text_size</item>
    </style>

</resources>
