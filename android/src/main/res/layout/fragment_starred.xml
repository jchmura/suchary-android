<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_starred"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/card_list_view">

    <it.gmariotti.cardslib.library.view.CardListView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:list_card_layout_resourceID="@layout/list_card_layout"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/placeholder"
        android:visibility="gone"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/placeholder_image"
            android:src="@drawable/star_light"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/no_starred_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/placeholder_text"
            android:text="@string/no_starred"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="40dp" />
    </LinearLayout>



</FrameLayout>
