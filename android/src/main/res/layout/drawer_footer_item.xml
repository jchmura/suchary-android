<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_footer_item_background">

    <ImageView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:src="@color/drawer_footer_divider" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/drawer_footer_item_image_height"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/drawer_footer_item_margin_bottom"
        android:layout_marginLeft="@dimen/drawer_footer_item_margin_left"
        android:layout_marginTop="@dimen/drawer_footer_item_margin_top"
        tools:src="@drawable/ic_action_settings" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/drawer_footer_item_margin_bottom"
        android:layout_marginLeft="@dimen/drawer_footer_item_text_margin_left"
        android:layout_marginTop="@dimen/drawer_footer_item_margin_top"
        android:layout_toRightOf="@+id/image"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/drawer_footer_item_text_size"
        tools:text="@string/navigation_drawer_settings" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:src="@color/drawer_footer_divider" />
</RelativeLayout>