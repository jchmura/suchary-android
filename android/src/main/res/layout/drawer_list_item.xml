<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:background="@drawable/drawer_item_background">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/drawer_icon_margin_left"
        android:layout_marginStart="@dimen/drawer_icon_margin_left"
        android:paddingBottom="@dimen/drawer_item_padding_bottom"
        android:paddingTop="@dimen/drawer_item_padding_top"
        />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/drawer_text_margin_left"
        android:layout_marginStart="@dimen/drawer_text_margin_left"
        android:paddingBottom="@dimen/drawer_item_padding_bottom"
        android:paddingTop="@dimen/drawer_item_padding_top"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@id/icon"
        android:textSize="@dimen/drawer_item_text_size"
        android:textColor="#000"
        tools:text="New Text"
         />

</RelativeLayout>